<%= div_for dish do %>  
<h3>    
	<%= link_to dish.title, dish %>    
	<% if dish.owned_by? current_user %>
		<span class='actions'>      
			<%= link_to "Edit", edit_dish_path(dish) %>     
			<%= link_to "Delete", dish, :confirm => "Are you sure?", :method => :delete %>
		</span>  
	<% end %>
</h3>  
<div id="dishes">
<%= dish.category1%>, <%= dish.category2 %>, <%= dish.category3 %> <br/>
Effort Level: <%= dish.effort_level %> <br/>
Cooking Duration (min): <%= dish.duration %>
Ingredients: <%= simple_format dish.ingredients %> 
</div>
<% end %>

